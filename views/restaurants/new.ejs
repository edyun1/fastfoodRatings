<%- include("../partials/header") %>

<h2>Add a Location</h2>

<div class="panel">
  <form method="POST" action="/restaurants" class="form">
    <label>Restaurant</label>
    <select name="chain" required>
      <% chains.forEach(c => { %>
        <option value="<%= c.chain %>"><%= c.chain %></option>
      <% }) %>
    </select>

    <label>City</label>
    <input name="city" required />

    <label>State (2 letters)</label>
    <input name="state" maxlength="2" minlength="2" pattern="[A-Za-z]{2}" required />

    <label>Address (optional)</label>
    <input name="address" />

    <button type="submit">Create</button>
  </form>
</div>

<%- include("../partials/footer") %>
